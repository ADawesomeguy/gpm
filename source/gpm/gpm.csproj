<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyVersion>0.1</AssemblyVersion>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <PackAsTool>true</PackAsTool>
        <ToolCommandName>gpm</ToolCommandName>
        <PackageOutputPath>./nupkg</PackageOutputPath>
        <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
        <PackageId>gpm</PackageId>
        <Product>gpm.cli</Product>
        <Description>GitHub package manager</Description>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/rfuzzo/gpm</PackageProjectUrl>
        <RepositoryUrl>https://github.com/rfuzzo/gpm</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>gpm, GitHub</PackageTags>
        <SatelliteResourceLanguages>en</SatelliteResourceLanguages>
        <AssemblyName>gpm</AssemblyName>
        <RootNamespace>gpm</RootNamespace>
    </PropertyGroup>

    <PropertyGroup>
        <PublishSingleFile>true</PublishSingleFile>
        <DebugType>embedded</DebugType>
    </PropertyGroup>


    <ItemGroup>
        <None Remove="appsettings.json" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="appsettings.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\gpm.core\gpm.core.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Hosting" Version="6.0.0" />
        <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="6.0.0" />
        <PackageReference Include="Microsoft.Win32.Registry" Version="5.0.0" />
        <PackageReference Include="Serilog" Version="2.10.0" />
        <PackageReference Include="Serilog.Sinks.Console" Version="4.0.1" />
        <PackageReference Include="Serilog.Sinks.File" Version="5.0.0" />
        <PackageReference Include="System.CommandLine" Version="2.0.0-beta1.21216.1" />
        <PackageReference Include="System.CommandLine.Hosting" Version="0.3.0-alpha.21216.1" />
        <PackageReference Include="LibGit2Sharp" Version="0.26.2" />
        <PackageReference Include="protobuf-net" Version="3.0.101" />
    </ItemGroup>
</Project>
